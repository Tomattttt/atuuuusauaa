def cvet(k, l, m, n):
    """проверка на одинаковый цвет поля"""
    cvet1 = (k + l) % 2
    cvet2 = (m + n) % 2
    if cvet1 == cvet2:
        return True
    else:
        return False
def Figure(figure, k, l, m, n):
    """проверка фигур"""
    if figure == "ферзь":
        if k == m or l == n or abs(k - m) == abs(l - n):
            return True
    elif figure == "ладья":
        if k == m or l == n:
            return True
    elif figure == "слон":
        if abs(k - m) == abs(l - n):
            return True
    elif figure == "конь":
        if abs(k - m) == 1 and abs(l - n) == 2 or abs(k - m) == 2 and abs(l - n) == 1:
            return True
    return False
